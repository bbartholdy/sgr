citHeader("To cite sgr in publications use:")

citEntry(entry = "Article",
  title        = "{sgr}: A Package for Simulating Conditional Fake Ordinal Data",
  author       = "Luigi Lombardi and Massimiliano Pastore",
  journal      = "The R Journal",
  year         = "2014",
  volume       = "6",
  number       = "1",
  pages        = "164--177",
  url          = "http://journal.r-project.org/archive/2014-1/lombardi-pastore.pd",

  textVersion  =
  paste("Luigi Lombardi and Massimiliano Pastore (2014).",
        "sgr: A Package for Simulating Conditional Fake Ordinal Data.",
        "The R Journal, 6(1), 164-177.",
        "URL http://journal.r-project.org/archive/2014-1/lombardi-pastore.pdf.")
)

